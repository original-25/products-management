extends ../../layouts/default.pug
include ../../mixins/products-list.pug
include ../../mixins/alert-error.pug
block main
    -if(messages.success)
        +alert-success(2000)
    -if(messages.error)
        +alert-danger(2000)
    .container 
        h2 #{pageTitle}
        form(
            action = '/user/register'
            method='POST'
        )
            .form-group
                label(for="fullName") Nhập họ tên
                input(type="fullName" class="form-control" id="fullName" name='fullName')

            .form-group
                label(for="email") Email
                input(type="email" class="form-control" id="email" name='email')
            
            .form-group
                label(for="password") Password
                input(type="password" class="form-control" id="password" name='password')
            
            
            button(type="submit" class="btn btn-primary form-control mb-10" style='margin-bottom: 10px') Đăng ký

