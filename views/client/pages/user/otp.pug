extends ../../layouts/default.pug
include ../../mixins/products-list.pug
include ../../mixins/alert-error.pug
block main
    -if(messages.success)
        +alert-success(2000)
    -if(messages.error)
        +alert-danger(2000)
    .container 
        h2 #{pageTitle}
        form(
            action = '/user/password/otp'
            method='POST'
        )
            .form-group
                label(for="email") Email
                input(type="text" class="form-control" id="email" name='email' readonly value=email)
            
            .form-group
                label(for="otp") OTP
                input(type="text" class="form-control" id="otp" name='otp')
            
            button(type="submit" class="btn btn-primary form-control mb-10" style='margin-bottom: 10px') Xác nhận

