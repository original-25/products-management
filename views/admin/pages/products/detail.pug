extends ../../layouts/default.pug

block main 
    h2 #{item.title}

    p Mô tả: #{item.description}

    p Giá: #{item.price}

    p Giảm giá: #{item.discountPercentage}

    img(src=item.thumbnail, alt="xx" width=200 height=200)

    p
        -if(item.status == 'active')
            span.btn.btn-success Hoạt động
        -else
            span.btn.btn-danger Dừng hoạt động
    a(href=`${prefixAdmin}/products/edit/${item.id}` class="btn btn-success") Chỉnh sửa 